<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                
                    <span class="fs-5 d-none d-sm-inline">
                            <%= link_to 'HOME',root_path, class: 'nav-link text-white' %>
                        </span>
                            <br>
               
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    <% if user_signed_in? %>
                        <% if current_user.role == "owner"  %>
                        <li class="mb-2">
                            <%= link_to 'Customers',root_path, class: 'nav-link text-primary' %>
                        </li>
                        <li class="mb-2">
                            <%= link_to 'Products',root_path, class: 'nav-link text-primary' %>
                        </li>
                        <li class="mb-2">
                            <%= link_to 'Diet Plans',root_path, class: 'nav-link text-primary' %>
                        </li>
                        <li class="mb-2">
                            <%= link_to 'Weekly Plans',root_path, class: 'nav-link text-primary' %>
                        </li>
                    <% else %>
                        
                        <li>
                            <%= link_to 'Diet Plans',root_path, class: 'nav-link text-primary' %>
                        </li>
                        <li class="mb-2">
                            <%= link_to 'Weekly Plans',root_path, class: 'nav-link text-primary' %>
                        </li>
                    <% end %>
                    <hr>
                <% else %>
                    <li>
                        <%= link_to 'Login', new_user_session_path, class: 'nav-link text-white' %>
                    </li>
                    <% end %>
                </ul>

                <% if user_signed_in? %>
                <div class="dropdown mt-auto">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="d-none d-sm-inline mx-1"><%= current_user.email %></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><%= button_to "Logout", destroy_user_session_path, method: :delete, class: 'dropdown-item' %></li>
                    </ul>
                </div>
                <% end %>
            </div>
        </div>
        <div class="col py-3">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
            <%= yield %>
        </div>
    </div>
</div>
